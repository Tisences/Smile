<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:padding="20dp"
    android:layout_height="wrap_content"
    android:background="@color/snow">

    <com.tisen.smile.utils.CircleImageView
        android:id="@+id/login_user_avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/user_default" />

    <EditText
        android:id="@+id/login_user_phone"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/login_user_avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:maxLength="11"
        android:hint="请输入手机号"
        android:inputType="phone"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/login_get_code"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/login_user_phone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="获取验证码"
        android:textColor="@color/burlywood"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/login_code"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/login_user_phone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="6"
        android:textSize="25dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/login_login"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/login_code"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="登录"
        android:textSize="30dp"
        android:visibility="invisible" />
</RelativeLayout>