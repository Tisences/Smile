<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/red_theme_background"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/show_joke_top"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingTop="30dp">

        <ImageView
            android:id="@+id/show_joke_top_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/back" />

        <ImageView
            android:id="@+id/show_joke_top_report"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/report" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/show_joke_bottom"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_alignParentBottom="true">

        <EditText
            android:id="@+id/show_joke_comment_edit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="@string/comment_edit_hint"
            android:paddingLeft="40dp" />
        <ImageView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="30dp"
            android:src="@drawable/hint_comment"
            android:layout_height="30dp" />
    </RelativeLayout>
    <ListView
        android:id="@+id/show_joke_comment_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/show_joke_top"
        android:layout_above="@id/show_joke_bottom"
        android:padding="10dp">

    </ListView>

</RelativeLayout>